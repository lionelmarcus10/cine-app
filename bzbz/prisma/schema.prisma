generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db_file/db.sqlite"
}

model Movie {
  id        Int         @id @default(autoincrement())  // Identifiant unique du film
  title     String                                      // Titre du film
  duration  Int                                         // Durée en minutes
  language  String                                      // Langue originale
  ageLimit  Int                                         // Âge minimum requis
  director  String                                      // Nom du réalisateur
  screenings Screening[]                                // Relation avec Screening (ancienne table Showtimes)
  subtitles Subtitle[]                                  // Liste de sous-titres (relation)
  actors    Actor[]                                     // Liste des acteurs principaux (relation)
}

model Cinema {
  id      Int       @id @default(autoincrement())  // Identifiant unique de la salle
  name    String                                     // Nom de la salle de cinéma
  city    String                                     // Ville où se trouve la salle
  address String                                    // Adresse complète
  screenings Screening[]                            // Relation avec Screening (ancienne table Showtimes)
}

model Screening {
  id        Int      @id @default(autoincrement())  // Identifiant unique de la séance
  movieId   Int                                         // Référence à Movie
  cinemaId  Int                                         // Référence à Cinema
  startTime DateTime                                    // Date et heure de début de la séance
  movie     Movie    @relation(fields: [movieId], references: [id])   // Relation avec Movie
  cinema    Cinema   @relation(fields: [cinemaId], references: [id])  // Relation avec Cinema
}

model Subtitle {
  id      Int    @id @default(autoincrement())      // Identifiant unique du sous-titre
  text    String                                   // Texte du sous-titre
  movieId Int                                      // Référence à Movie
  movie   Movie  @relation(fields: [movieId], references: [id]) // Relation avec Movie
}

model Actor {
  id      Int    @id @default(autoincrement())      // Identifiant unique de l'acteur
  name    String                                   // Nom de l'acteur
  movieId Int                                      // Référence à Movie
  movie   Movie  @relation(fields: [movieId], references: [id]) // Relation avec Movie
}

model Administrator {
  id       Int       @id @default(autoincrement())  // Identifiant unique de l'administrateur
  username String    // Nom d'utilisateur pour la connexion
  email    String    @unique                        // Email (doit être unique)
  password String    // Mot de passe (hashé)
}